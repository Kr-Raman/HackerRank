#include<bits/stdc++.h>

using namespace std;



int main()
{
    stack<int> s; //declaring a stack 
    //pushing some element in the stack
    cout<<"How many element do you wish to Enter"<<endl;
    int n ;
    cin>>n;
    cout<<"Enter the element :"<<endl;
    for(int i=0 ; i<=n-1; i++)
    {
        int ele;
        cin>>ele;
        s.push(ele);//pushing element in the stack
        
    
    }
    
    
    int arr[n];
    int top=0;
    
    while(!s.empty()) // run till the stack gets empty
    {
        arr[top++]=s.top(); //filling the elements into the array
        s.pop(); //and popping the top element at the same time
        
        
    }
    cout<<"Reversed Stack is :"<<endl;

    for(int i =0 ; i<= n-1 ; i++)
    {
        cout<<arr[i]<<" "; // printing the array as REVERSED STACK
    }
     
     return 0;
    
    
    
   
    
}


